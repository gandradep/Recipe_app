<div class="m-4">
  <h1>Add Ingredient</h1>
  <%= form_with model: @recipe_food, url: recipe_recipe_foods_path do |f|%>
  <div class="mt-3">
    <%= f.label :food_id, class: 'form-label' %>
    <%= f.collection_select :food_id, Food.where(user: current_user), :id, :custom_text, class: 'form-control' %>
    </div>
    <div class="mt-3" >
    <%= f.label :quantity, class: 'form-label' %>
    <%= f.text_field :quantity, class: 'form-control w-25' %>
    </div>
    <%= f.submit "Add Ingredient", class: 'mt-2' %>
  <%end%>
  <% if flash[:error] %>
      <div><%= flash[:error] %></div>
  <% end %>
</div>


