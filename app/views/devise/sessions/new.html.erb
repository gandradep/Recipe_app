<div class="position-absolute top-50 start-50 translate-middle">
  <h2 >Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field mb-3">
      <%= f.label :email, for: "exampleInputEmail1", class: "form-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control w-100" %>
    </div>

    <div class="field">
      <%= f.label :password, class:"form-label" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control w-100" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me, class: "form-check-label" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-success mt-3" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
