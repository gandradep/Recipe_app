<h2>Shopping List</h2>
<div class="d-flex justify-content-between w-50 m-auto">

  <p>Amount of food items to buy: <%= @missing_item %></p>
  <p>Recipe: <%= @recipe.name%></p>
  <p>Value of shopping list: <%= @new_price%></p>
</div>
<div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Food</th>
        <th scope="col">Quantity</th>
        <th scope="col">Price</th>
      </tr>
    </thead>
    <tbody>
    <% @missing.each do |item| %>
          <tr>
            <td><%= item['name']%></td>
            <td><%= item['new_q']%> <%= item['unit']%></td>
            <td><%= item['price']%>$</td>

          </tr>
        <% end %>

    </tbody>
  </table>
</div>

